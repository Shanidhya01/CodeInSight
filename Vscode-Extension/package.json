{
  "name": "codeinsight-reviewer",
  "displayName": "CodeInsight Reviewer",
  "description": "AI-powered code review assistant for developers",
  "version": "0.0.1",
  "publisher": "ShanidhyaKumar",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:codeinsight.reviewCode"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeinsight.reviewCode",
        "title": "CodeInsight: Review Code"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "CodeInsight Settings",
      "properties": {
        "codeinsight.backendUrl": {
          "type": "string",
          "default": "http://localhost:5000/api/review",
          "description": "Your backend API endpoint for AI review."
        },
        "codeinsight.autoReviewOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically review code when a file is saved."
        }
      }
    }
  },
  "scripts": {
    "compile": "webpack --mode production",
    "watch": "webpack --watch",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.13.1",
    "debug": "^4.4.3"
  }
}
